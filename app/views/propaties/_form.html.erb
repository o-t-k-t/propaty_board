<%= form_for(propaty) do |f| %>
  <% if propaty.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(propaty.errors.count, "error") %> prohibited this propaty from being saved:</h2>

      <ul>
      <% propaty.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :rent %>
    <%= f.number_field :rent %>円
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>年
  </div>

  <div class="field">
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>

  <% propaty.closest_stations.each_with_index do |cs, idx| %>
    <h2>最寄り駅<%= idx + 1 %> </h2>
      <%= f.fields_for :closest_stations, cs do |csf| %>
        <div class="field">
          <%= csf.label :route_name %>
          <%= csf.text_field :route_name %>
      </div>

      <div class="field">
          <%= csf.label :station_name %>
          <%= csf.text_field :station_name %>
      </div>

      <div class="field">
          <%= csf.label :to_closest_station_min %>
          <%= csf.number_field :to_closest_station_min %>分
        </div>
      <% end %>
  <% end%>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
