<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @propaty.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @propaty.rent %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @propaty.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @propaty.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @propaty.note %>
</p>

<hr>

<% @propaty.closest_stations.each_with_index do |cs, idx| %>
  <h3>最寄り駅<%= idx + 1 %></h3>
  <p>
    <strong>路線名:</strong>
    <%= cs.route_name %>
  </p>

  <p>
    <strong>駅名:</strong>
    <%= cs.station_name %>
  </p>

  <p>
    <strong>徒歩分数:</strong>
    <%= cs.to_closest_station_min %>分
  </p>
<% end%>

<%= link_to '編集', edit_propaty_path(@propaty) %> |
<%= link_to '戻る', propaties_path %>
